<div class="item-show">
  <div class="block1">
    <div class="item-poster-wrapper">
      <div class="item-poster">
        <img src="<%= @item.poster_url %>" alt="#">
      </div>

                <div class= "edit">
      <% if @item.user == current_user %>
    <%= link_to "Modifier", edit_item_path(@item), class: "btn btn-primary" %>
    <%= link_to "Supprimer", item_path(@item), data: {turbo_method: :delete, turbo_confirm: "Etes vous sur ?"}, class: "btn btn-primary" %>
  <% end %>
      </div>
    </div>

      <div class="info-section">
        <div class="item-name">
          <h1><%= @item.name %></h1>
        </div>

        <div class="item-description">
          <p>Description:</p>
          <p><%= @item.description %></p>
        </div>

        <div class="item-price">
          <h2>Prix à la journée : <%= @item.price %> € </h2>
        </div>

      </div>


    </div>



  <div class="block2">
    <div class="map-section">
      <div style="width: 100%; height: 600px;"
        data-controller="map"
        data-map-markers-value="<%= @markers.to_json %>"
        data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>"></div>
    </div>

    <div class="booking-form">
    <%= simple_form_for [@item, @booking] do |f| %>
      <div style="margin-right: -8px;">
        <div style="margin-left: 200px">
              <div class="booking-date">
        <%= f.input :start_at, as: :string, placeholder: "Dates", label: false, input_html: {data: { controller: "flatpickr" }, style: "width: 30vh; height: 4em;"} %>
        </div>
              </div>
      <div class="booking-reserve">
      <%= f.submit "Réserver !"%>
      </div>

      </div>
    <% end %>
    </div>
  </div>
</div>
