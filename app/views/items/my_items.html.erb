
<div class="font-b">
  <div class="fort-title">
    <h1>Vos objets mythiques</h1>
  </div>
  <div class="container">
    <div class="cards">
      <% @items.each do |item| %>
        <div class="card-category">
          <%= link_to item_path(item), class: "navbar-brand" do %>
            <%= image_tag item.poster_url, class:"card-image", alt: "" %>
              <% end %>
              <div class="card-category-info">
                <h2><%= item.name %></h2>
                <img src="<%= item.user.photo_url %>" class="avatar">
              </div>
            </div>
          <% end %>
    </div>
  </div>
</div>

