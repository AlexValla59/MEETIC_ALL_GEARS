<div class="main-image">
  <div class= "title-index">
    <h1>Items available</h1>
  </div>
</div>

<div class="container">
  <div class="cards">
    <% @items.each do |item| %>
      <div class="card-category">
        <%= image_tag item.poster_url, alt: "" %>
        <div class="card-category-info">
          <h2><%= item.name %></h2>
          <%= link_to "infos", item_path(item), class: "btn btn-primary mg-2" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
